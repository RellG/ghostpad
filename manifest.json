{
  "manifest_version": 3,
  "name": "GhostPad",
  "short_name": "GhostPad",
  "description": "Private notepad that auto-deletes when browser closes. Session-only storage, multiple tabs, privacy blur, self-destruct timers.",
  "version": "2.3.0",
  "author": "GhostPad Team",
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://*.up.railway.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Open GhostPad"
    },
    "new_note": {
      "suggested_key": {
        "default": "Ctrl+Shift+N",
        "mac": "Command+Shift+N"
      },
      "description": "Create new note"
    },
    "clear_current": {
      "suggested_key": {
        "default": "Ctrl+Shift+Delete",
        "mac": "Command+Shift+Delete"
      },
      "description": "Clear current note"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
