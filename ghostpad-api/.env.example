# GhostPad Premium API - Environment Variables
# Copy this file to .env and fill in your actual values

# Railway will automatically provide this
DATABASE_URL=postgresql://user:password@host:port/database

# Get from Stripe Dashboard > Developers > API Keys
STRIPE_SECRET_KEY=sk_live_your_secret_key_here

# Get from Stripe Dashboard > Developers > Webhooks
# After creating webhook endpoint pointing to your Railway URL/webhook/stripe
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Create a strong random string for admin endpoints
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_API_KEY=your_random_admin_api_key_here

# Environment
NODE_ENV=production

# Port (Railway provides this automatically)
PORT=3000
